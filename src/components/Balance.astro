---
import BalanceLogo from './BalanceLogo.astro';
---

<section class="balance">
    <div class="balance__left">
        <p>My balance</p>
        <h1>$921.48</h1>
    </div>
    <BalanceLogo />
</section>

<style lang="scss">
    .balance {
      width : 28rem;
      height : 8rem;
      background-color: var(--softRed);
      border-radius: 1rem;
      padding : 2rem;

      @media screen and (max-width: 600px) and (orientation: portrait) {
        width : 95vw;
      }

      @media screen and (max-width: 300px) {
        padding : 1rem;
      }

      display: flex;
      justify-content: space-between;
      align-items: center;

      &__left {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;

        height : 100%;
        color: var(--veryPaleOrange);

        p {
          margin-bottom: .15rem;
        }

        h1 {
          margin-top: .15rem;
          font-size: 2rem;
        }
      }
    }
</style>
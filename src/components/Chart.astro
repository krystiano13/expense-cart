---
import data from './data.json';
---

<div class="chart">
    {
        data.chart.map(item => (
            <div class="chart__column">
                <div class="chart__column__price">${ item.price }</div>
                <div class="chart__column__representation"></div>
                <p class="day">{ item.day }</p>
            </div>
        ))
    }
</div>

<script define:vars={{ data }}>
    const columns = document.querySelectorAll('.chart__column__representation');
    for(let i=0; i < data.chart.length; i++) {
        console.log(columns[i]);
        columns[i].style.height = data.chart[i].height;
        columns[i].style.backgroundColor = data.chart[i].bg;
    }
</script>

<style lang="scss">
    .chart {
      width : 100%;
      min-height : 16rem;
      display: flex;
      justify-content: space-between;
      align-items: center;

      &__column {
        height : 15rem;
        width : calc(100% / 7);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-end;

        &__price {
          background-color: var(--darkBrown);
          color: var(--veryPaleOrange);
          margin-bottom: .6rem;
          font-size: .8rem;
          padding: .25rem;
          border-radius: .25rem;
          font-weight: 700;
          opacity : 0;
          transition: opacity 125ms;
        }

        .day {
          color: var(--mediumBrown);
          margin-top: 0.5rem;
        }

        &__representation {
          width : 75%;
          height : 40%;
          border-radius: .25rem;
          cursor: pointer;

          transition: opacity 250ms;
        }

        &__price:has(+ &__representation:hover) {
          opacity: 1;
        }

        &__representation:hover {
          opacity : 0.7;
        }
      }
    }
</style>
